# Hotel Booking System - PostgreSQL-Only Configuration
# Copy this file to .env and fill in your actual PostgreSQL details

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here

# PostgreSQL Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@host:port/database

# Example for local PostgreSQL:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/hotel_booking

# Example for cloud PostgreSQL (Koyeb, Railway, etc.):
# DATABASE_URL=postgresql://user:pass@ep-example-123.region.provider.com:5432/dbname

# Google AI API (Optional - only for Gemini image processing)
GOOGLE_API_KEY=your_gemini_api_key

# Performance Settings
ENABLE_PERFORMANCE_LOGGING=true

# Production Settings
ENV=production
DEBUG=false

